//Ejercicio 3.B Crear una función llamada 
//identidad que retorne el valor que se le pasa

function identidad(){
    var valor = prompt("que valor te corresponde");
    return valor;
}

identidad("Tiene valor de:");


//Ejercicio 3. (C)
//Crear una función llamada suma devuelva la suma
//de los 2 números que reciba por parámetros

function suma(){
    var num_1= prompt ("ingrese primer numero a sumar");
    var num_2= prompt ("ingrese un segundo numero a sumar");
    var resultado= num_1 + num_2;
    return resultado;
}

function suma(2+3);
