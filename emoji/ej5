/*
5) Crear un programa que inicialice un servidor en el puerto 3000, el mismo debe responder ante el
endpoint /emoji con un emoji aleatorio en un JSON de esta forma { "emoji": "ğŸ’£" }. Para este ejercicio
van a recibir una pequeÃ±a ayuda, la funciÃ³n para obtener un emoji aleatorio es la siguiente:

function obtenerEmoji(indice) {
    var emojis = ["ğŸ˜€", "ğŸ˜³", "ğŸ˜„", "ğŸ˜", "ğŸ˜†", "ğŸ˜…", "ğŸ˜‚", "ğŸ˜´", "ğŸ¤­ï¸", "ğŸ˜Š", "ğŸ˜‡", "ğŸ™‚", "ğŸ™ƒ", "ğŸ˜‰", "ğŸ˜Œ", "ğŸ˜", "ğŸ¥°", "ğŸ˜˜", "ğŸ¤¤", "ğŸ˜™", "ğŸ˜š", "ğŸ˜‹", "ğŸ˜›", "ğŸ˜", "ğŸ˜œ", "ğŸ˜", "ğŸ¤“", "ğŸ¥³", "ğŸ¤¯", "ğŸ˜¡", "ğŸ˜±", "ğŸ¥º", "ğŸ˜"]
    if (!indice) {
        var random = Math.floor(Math.random() * 33)
        return emojis[random]
    }
    return emojis[indice]
}

var emoji = obtenerEmoji()
*/

var http = require("http");
var host = "127.0.0.1";
var port = 3000;
var j = require('./emoji.json');
var fx = require('./fxemoji');
var URL = require('url');

console.log(fx());

//var cambiado = (j.emoji).replace(/ /g, fx());


var server = http.createServer(function(req, res) {
    if (req.method !== "GET") {
        res.statusCode = 401
        res.end("Error: se esperaba una conexiÃ³n GET\n")
    }

    var objetoUrl = URL.parse(req.url)
    if (objetoUrl.pathname === "/emoji") {
        var respuesta = JSON.stringify({ emoji: (j.emoji).replace(/ /g, fx())})
        res.statusCode = 200
        res.setHeader("Content-Type", "application/json")
        res.end(respuesta)
    } else {
        res.statusCode = 404
        res.end("Error: endpoint no encontrado\n")
    }
})

server.listen(port, host, function() {
    console.log(`Servidor escuchando en http://${host}:${port}/`)
})